{
    "scopeName": "template.nodom",
    "injectionSelector": "L:meta.class",
    "patterns": [{
            "include": "#expression"
        }, {
            "include": "#templateStr"
        }

    ],
    "patterns": [{
        "include": "#start"
    }],
    "repository": {

        "templateStr": {
            "begin": "template.*=\\s*`",
            "end": "`",
            "name": "meta.embedded.*",
            "patterns": [{
                "include": "#comment"
            }, {
                "include": "#doubleTag"
            }, {
                "include": "#text"
            }]
        },
        "expression": {
            "begin": "template.*\\{",
            "end": "\\s*\\}(?!\\s*\\w)",
            "name": "meta.function",
            "patterns": [{
                "include": "#start"
            }, {
                "include": "#return"
            }, {
                "include": "#keyword"
            }]
        },
        "start": {
            "comment": "开始重复会共享匹配值",
            "begin": "(?<=([\\w\\s]\\=|return)\\s*)`",
            "end": "`",
            "name": "meta.embedded.*",
            "patterns": [{
                "//": "原生符号",
                "include": "#origin1"
            }, {
                "include": "#origin2"
            }, {
                "//": "单行注释",
                "include": "#singleComment"
            }, {
                "include": "#comment"
            }, {
                "include": "#doubleTag"
            }, {
                "include": "#text"
            }]
        },
        "origin1": {
            "match": "(?<=.*)(\\$)(\\{)(.*)(\\})(?=.*)",
            "name": "aaa",
            "captures": {
                "1": {
                    "name": "punctuation.definition.template-expression.begin"
                },
                "2": {
                    "name": "entity.name.function"
                },
                "3": {
                    "name": "variable.other.readwrite"
                },
                "4": {
                    "name": "entity.name.function"
                }
            }
        },
        "origin2": {
            "begin": "(?<=.*)(\\$)(\\{)(.*)",
            "end": "(.*)(\\})(?=.*)",
            "contentName": "variable.other.readwrite",
            "captures": {
                "1": {
                    "name": "punctuation.definition.template-expression.begin"
                },
                "2": {
                    "name": "entity.name.function"
                },
                "3": {
                    "name": "variable.other.readwrite"
                },
                "4": {
                    "name": "variable.other.readwrite"
                },
                "5": {
                    "name": "entity.name.function"
                }
            }
        },
        "return": {
            "match": "(?<=.*)return(?=[\\\"'`\\s]*)",
            "name": "keyword.control.flow"
        },
        "keyword": {
            "match": "(if|else|else if|while|switch|case|let|const|break|continue)",
            "name": "keyword.control.conditional"
        },
        "attributes": {
            "match": "([\\w\\-\\$]+)(\\s*\\=\\s*)(\\\".*?\\\"|\\'.*?\\'|\\`.*?\\`|(\\{{2}([^\\'\"\\`]+?|\\'.*?\\'|\\\".*?\\\"|\\`.*?\\`)+?\\}{2}(?!\\}))|(\\w+))|([\\w\\-]+)|(\\/.*)",
            "name": "as",
            "captures": {
                "1": {
                    "name": "entity.other.attribute-name"
                },
                "2": {
                    "name": "keyword.operator.assignment"
                },
                "3": {
                    "name": "punctuation.definition.string.end"
                },
                "4": {
                    "patterns": [{
                        "include": "#text"
                    }]
                },
                "6": {
                    "name": "punctuation.definition.string.end"
                },
                "7": {
                    "name": "entity.other.attribute-name"
                },
                "8": {
                    "patterns": [{
                        "include": "#module"
                    }]
                }
            }
        },
        "doubleTag": {
            "match": "(?<=.*)<([\\w-]*)(((\\{{2}([^\\'\"\\`\\}]+|\\'.*\\'|\\\".*\\\"|\\`.*\\`)+\\}{2}(?!\\})|[\\s\\w\\$=-]+|\\\".*?\\\"|\\'.*?\\'|\\`.*?\\`|(\/[^><\\s]*))*))>(((\\{{2}.+\\}{2}|.*?)*)<\/(.+)>|(?!.*<\/))",
            "name": "test",
            "captures": {
                "1": {
                    "patterns": [{
                        "include": "#module"
                    }]
                },
                "3": {
                    "patterns": [{
                        "include": "#attributes"
                    }]
                },
                "6": {
                    "patterns": [{
                        "include": "#module"
                    }]
                },
                "8": {
                    "name":"textdob",
                    "patterns": [{
                        "include": "#text"
                    }, {
                        "include": "#doubleTag"
                    }]
                },
                "9": {
                    "patterns": [{
                        "include": "#module"
                    }]
                },
                "10": {
                    "patterns": [{
                        "include": "#module"
                    }]
                }
            }

        },
        "module": {
            "match": "(([A-Z][^>\/\\s]+)|([^>\/\\s]+))",
            "name": "md",
            "captures": {
                "2": {
                    "name": "entity.name.type.class"
                },
                "3": {
                    "name": "entity.name.tag"
                }
            }

        },
        "text": {
            "match": "((\\{{2})(([^\\'\"\\`]+?|\\'.*?\\'|\\\".*?\\\"|\\`.*?\\`)+?)(\\}{2}(?!\\})))",
                "captures": {
                    "2": {
                        "name": "entity.name.function"
                    },
                    "3": {
                        "name": "markup.italic"
                    },
                    "5": {
                        "name": "entity.name.function"
                    }
                },
                "name": "text"
        },
        "comment": {
            "begin": "(?<=.*)(<!--)(.*)",
            "end": "(.*)(-->)(?=.*)",
            "name": "comment.block",
            "captures": {
                "1": {
                    "name": "punctuation.definition.comment"
                },
                "2": {
                    "name": "punctuation.definition.comment"
                }
            }
        },
        "singleComment": {
            "match": "(?<=.*)(<!--)(.*)(-->)(?=.*)",
            "name": "comment.block",
            "captures": {
                "1": {
                    "name": "punctuation.definition.comment"
                },
                "3": {
                    "name": "punctuation.definition.comment"
                }
            }
        }
    }
}